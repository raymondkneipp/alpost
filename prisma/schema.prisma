generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Site {
  id        String @id @default(cuid())
  name      String
  subdomain String @unique

  theme    Theme?
  address  Address?
  news     News[]
  officers Officers[]
}

model Theme {
  id     String @id @default(cuid())
  color  Color  @default(SKY)
  radius Radius @default(MEDIUM)

  site   Site   @relation(fields: [siteId], references: [id])
  siteId String @unique
}

model Address {
  id     String @id @default(cuid())
  street String
  city   String
  state  String
  zip    String

  site   Site   @relation(fields: [siteId], references: [id])
  siteId String @unique
}

model News {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  title     String   @db.VarChar(100)
  content   String   @db.VarChar(2000)

  site   Site   @relation(fields: [siteId], references: [id])
  siteId String
}

model Officers {

  id          String @id @default(cuid())
  name        String
  title       String
  description String @db.VarChar(2000)

  site   Site   @relation(fields: [siteId], references: [id])
  siteId String
}

enum Color {
  RED
  ORANGE
  AMBER
  YELLOW
  LIME
  GREEN
  EMERALD
  TEAL
  CYAN
  SKY
  BLUE
  INDIGO
  VIOLET
  PURPLE
  FUCHSIA
  PINK
  ROSE
  NEUTRAL
  WHITE
}

enum Radius {
  NONE
  SMALL
  REGULAR
  MEDIUM
  LARGE
  XL
  XXL
  XXXL
}
